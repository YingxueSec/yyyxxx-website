---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "映雪安全 - 专业的网络安全服务提供商" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
      <link rel="icon" type="image/png" href="/logo.png" />
  </head>
  <body>
    <slot />
  </body>
</html>
