<script is:inline>
  // 平滑滚动
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });

  // 计算运行时间（从 2025-11-20 开始）
  function updateRuntime() {
    const startDate = new Date('2025-11-20T00:00:00');
    const now = new Date();
    const diff = now.getTime() - startDate.getTime();
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const runtimeElement = document.getElementById('runtime_days');
    if (runtimeElement) {
      runtimeElement.textContent = String(days);
    }
  }
  
  updateRuntime();
  // 每天更新一次
  setInterval(updateRuntime, 1000 * 60 * 60 * 24);

  // 一键加群（保持当前页，不整页跳转）
  (function(){
    const btn = document.getElementById('joinGroupBtn');
    if (!btn) return;
    const mobileDeepLink = 'mqqapi://card/show_pslcard?src_type=internal&version=1&uin=897500387&card_type=group&source=qrcode';
    const qqUniversal = 'https://qm.qq.com/q/HASkWRLpw6';
    btn.addEventListener('click', function(e){
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      if (isMobile) {
        // 移动端：拦截并直接拉起 QQ 应用
        e.preventDefault();
        window.location.href = mobileDeepLink;
      }
      // 桌面端：不拦截，保持 <a target="_blank"> 默认在新标签页打开
    });
  })();
</script>