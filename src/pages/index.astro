<script is:inline async src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>

<script>
  // 平滑滚动
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });

  // 计算运行时间（从 2024-11-20 开始）
  function updateRuntime() {
    const startDate = new Date('2024-11-20T00:00:00');
    const now = new Date();
    const diff = now.getTime() - startDate.getTime();
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const runtimeElement = document.getElementById('runtime_days');
    if (runtimeElement) {
      runtimeElement.textContent = String(days);
    }
  }
  
  updateRuntime();
  // 每天更新一次
  setInterval(updateRuntime, 1000 * 60 * 60 * 24);
</script>