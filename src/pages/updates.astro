---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<Layout title="更新日志 - 映雪安全" description="映雪安全团队产品更新和开发进度">
  <!-- 精致网格背景 -->
  <div class="fixed inset-0 -z-10 grid-bg opacity-40 dark:opacity-30"></div>
  
  <!-- 高端渐变背景 - 深色模式 -->
  <div class="fixed inset-0 -z-10 overflow-hidden hidden dark:block">
    <div class="absolute -top-40 -left-40 w-[600px] h-[600px] bg-blue-600/20 rounded-full blur-[120px]"></div>
    <div class="absolute top-1/3 right-0 w-[500px] h-[500px] bg-indigo-600/15 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-0 left-1/3 w-[400px] h-[400px] bg-purple-600/10 rounded-full blur-[100px]"></div>
  </div>
  
  <!-- 高端渐变背景 - 浅色模式 -->
  <div class="fixed inset-0 -z-10 overflow-hidden dark:hidden">
    <div class="absolute -top-40 -left-40 w-[600px] h-[600px] bg-blue-400/15 rounded-full blur-[120px]"></div>
    <div class="absolute top-1/3 right-0 w-[500px] h-[500px] bg-indigo-400/10 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-0 left-1/3 w-[400px] h-[400px] bg-purple-400/8 rounded-full blur-[100px]"></div>
  </div>
  
  <!-- 导航栏 -->
  <header class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/98 dark:bg-background/95 backdrop-blur-xl">
    <div class="container mx-auto flex h-16 max-w-screen-2xl items-center justify-between px-8 lg:px-12">
      <a class="flex items-center space-x-3 group" href="/">
        <img src="/logo.png" alt="映雪安全" class="h-8 w-8" />
        <span class="font-semibold text-lg tracking-tight">映雪安全</span>
      </a>
      <nav class="flex items-center space-x-8 text-sm">
        <a class="text-muted-foreground hover:text-foreground transition-colors" href="/">首页</a>
        <a class="text-muted-foreground hover:text-foreground transition-colors" href="/products">产品</a>
        <a class="text-foreground font-medium" href="/updates">更新</a>
        <a class="text-muted-foreground hover:text-foreground transition-colors" href="/#contact">联系</a>
        <div class="w-px h-5 bg-border/50"></div>
        <ThemeToggle />
      </nav>
    </div>
  </header>

  <!-- 页面标题 -->
  <section class="container mx-auto relative px-6 py-20">
    <div class="mx-auto flex max-w-[980px] flex-col items-center gap-6 text-center">
      <div class="fade-in-up inline-flex items-center rounded-full bg-gradient-to-r from-green-500/20 to-blue-500/20 px-4 py-2 text-sm font-medium border border-green-500/20 backdrop-blur-sm">
        <span class="mr-2 text-lg">📝</span>
        <span class="text-green-400">开发动态</span>
      </div>
      
      <h1 class="fade-in-up delay-100 text-4xl font-bold leading-tight tracking-tighter md:text-5xl lg:text-6xl">
        更新<span class="gradient-text-animated">日志</span>
      </h1>
      
      <p class="fade-in-up delay-200 max-w-[750px] text-lg text-muted-foreground leading-relaxed">
        记录我们的开发进度、新功能发布和重要更新
      </p>
    </div>
  </section>

  <!-- 时间线 -->
  <section class="container mx-auto px-6 pb-24">
    <div class="mx-auto max-w-3xl">
      
      <!-- 更新条目 1 -->
      <div class="relative pl-10 pb-12 border-l-2 border-primary/30">
        <div class="absolute left-0 top-0 -translate-x-1/2 flex h-5 w-5 items-center justify-center">
          <div class="h-5 w-5 rounded-full border-2 border-primary bg-primary/20 shadow-lg shadow-primary/30"></div>
        </div>
        
        <div class="group p-6 rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm hover-card">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <time class="text-sm text-muted-foreground bg-muted/50 px-3 py-1 rounded-full">2025-11-19</time>
            <span class="inline-flex items-center rounded-full bg-green-500/10 px-3 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-500/20">
              v1.2.0
            </span>
          </div>
          
          <h3 class="text-xl font-bold mb-4 group-hover:text-primary transition-colors">产品名称 1 - 重大更新</h3>
          
          <div class="space-y-4 text-muted-foreground">
            <div class="p-4 rounded-xl bg-emerald-500/5 border border-emerald-500/10">
              <p class="font-semibold text-emerald-400 mb-2">✨ 新功能</p>
              <ul class="space-y-1.5 ml-4 text-sm">
                <li class="flex items-start gap-2"><span class="text-emerald-400">•</span> 添加了新的扫描引擎，性能提升 50%</li>
                <li class="flex items-start gap-2"><span class="text-emerald-400">•</span> 支持自定义规则配置</li>
                <li class="flex items-start gap-2"><span class="text-emerald-400">•</span> 新增可视化报告导出功能</li>
              </ul>
            </div>
            
            <div class="p-4 rounded-xl bg-amber-500/5 border border-amber-500/10">
              <p class="font-semibold text-amber-400 mb-2">🐛 修复</p>
              <ul class="space-y-1.5 ml-4 text-sm">
                <li class="flex items-start gap-2"><span class="text-amber-400">•</span> 修复了在某些环境下的崩溃问题</li>
                <li class="flex items-start gap-2"><span class="text-amber-400">•</span> 优化了内存使用</li>
              </ul>
            </div>
            
            <div class="p-4 rounded-xl bg-blue-500/5 border border-blue-500/10">
              <p class="font-semibold text-blue-400 mb-2">📚 文档</p>
              <ul class="space-y-1.5 ml-4 text-sm">
                <li class="flex items-start gap-2"><span class="text-blue-400">•</span> 更新了使用文档和 API 说明</li>
              </ul>
            </div>
          </div>
          
          <div class="flex gap-4 pt-4 mt-4 border-t border-border/30">
            <a href="#" class="text-sm text-primary hover:underline">查看详情 →</a>
            <a href="#" class="text-sm text-muted-foreground hover:text-foreground transition-colors">下载</a>
          </div>
        </div>
      </div>

      <!-- 更新条目 2 -->
      <div class="relative pl-10 pb-12 border-l-2 border-border/30">
        <div class="absolute left-0 top-0 -translate-x-1/2 flex h-5 w-5 items-center justify-center">
          <div class="h-5 w-5 rounded-full border-2 border-blue-500/50 bg-blue-500/10"></div>
        </div>
        
        <div class="group p-6 rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm hover-card">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <time class="text-sm text-muted-foreground bg-muted/50 px-3 py-1 rounded-full">2025-11-15</time>
            <span class="inline-flex items-center rounded-full bg-blue-500/10 px-3 py-1 text-xs font-medium text-blue-400 ring-1 ring-inset ring-blue-500/20">
              开发进度
            </span>
          </div>
          
          <h3 class="text-xl font-bold mb-4 group-hover:text-primary transition-colors">本周开发进度更新</h3>
          
          <div class="p-4 rounded-xl bg-card/50 border border-border/30">
            <p class="text-muted-foreground mb-3">本周主要工作：</p>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li class="flex items-start gap-2"><span class="text-blue-400">•</span> 完成了新版本核心功能开发</li>
              <li class="flex items-start gap-2"><span class="text-blue-400">•</span> 进行了大量测试和优化</li>
              <li class="flex items-start gap-2"><span class="text-blue-400">•</span> 准备下周发布 beta 版本</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- 更新条目 3 -->
      <div class="relative pl-10 pb-12 border-l-2 border-border/30">
        <div class="absolute left-0 top-0 -translate-x-1/2 flex h-5 w-5 items-center justify-center">
          <div class="h-5 w-5 rounded-full border-2 border-green-500/50 bg-green-500/10"></div>
        </div>
        
        <div class="group p-6 rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm hover-card">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <time class="text-sm text-muted-foreground bg-muted/50 px-3 py-1 rounded-full">2025-11-10</time>
            <span class="inline-flex items-center rounded-full bg-green-500/10 px-3 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-500/20">
              v1.1.0
            </span>
          </div>
          
          <h3 class="text-xl font-bold mb-4 group-hover:text-primary transition-colors">产品名称 2 - 功能增强</h3>
          
          <div class="space-y-4 text-muted-foreground">
            <div class="p-4 rounded-xl bg-emerald-500/5 border border-emerald-500/10">
              <p class="font-semibold text-emerald-400 mb-2">✨ 新功能</p>
              <ul class="space-y-1.5 ml-4 text-sm">
                <li class="flex items-start gap-2"><span class="text-emerald-400">•</span> 增加了批量处理功能</li>
                <li class="flex items-start gap-2"><span class="text-emerald-400">•</span> 支持多线程扫描</li>
              </ul>
            </div>
            
            <div class="p-4 rounded-xl bg-purple-500/5 border border-purple-500/10">
              <p class="font-semibold text-purple-400 mb-2">🔧 改进</p>
              <ul class="space-y-1.5 ml-4 text-sm">
                <li class="flex items-start gap-2"><span class="text-purple-400">•</span> 优化了用户界面</li>
                <li class="flex items-start gap-2"><span class="text-purple-400">•</span> 提升了整体性能</li>
              </ul>
            </div>
          </div>
          
          <div class="flex gap-4 pt-4 mt-4 border-t border-border/30">
            <a href="#" class="text-sm text-primary hover:underline">查看详情 →</a>
            <a href="#" class="text-sm text-muted-foreground hover:text-foreground transition-colors">下载</a>
          </div>
        </div>
      </div>

      <!-- 更新条目 4 -->
      <div class="relative pl-10 pb-12 border-l-2 border-border/30">
        <div class="absolute left-0 top-0 -translate-x-1/2 flex h-5 w-5 items-center justify-center">
          <div class="h-5 w-5 rounded-full border-2 border-purple-500/50 bg-purple-500/10"></div>
        </div>
        
        <div class="group p-6 rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm hover-card">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <time class="text-sm text-muted-foreground bg-muted/50 px-3 py-1 rounded-full">2025-11-01</time>
            <span class="inline-flex items-center rounded-full bg-purple-500/10 px-3 py-1 text-xs font-medium text-purple-400 ring-1 ring-inset ring-purple-500/20">
              公告
            </span>
          </div>
          
          <h3 class="text-xl font-bold mb-4 group-hover:text-primary transition-colors">映雪安全团队成立</h3>
          
          <div class="p-4 rounded-xl bg-gradient-to-br from-purple-500/5 to-pink-500/5 border border-purple-500/10">
            <p class="text-muted-foreground leading-relaxed mb-3">
              我们很高兴地宣布映雪安全团队正式成立！我们致力于开发高质量的网络安全工具，帮助安全研究人员和企业更好地保护数字资产。
            </p>
            <p class="text-muted-foreground leading-relaxed">
              未来我们将持续推出更多实用的安全产品，敬请期待！
            </p>
          </div>
        </div>
      </div>

      <!-- 结束标记 -->
      <div class="relative pl-10">
        <div class="absolute left-0 top-0 -translate-x-1/2 flex h-5 w-5 items-center justify-center">
          <div class="h-5 w-5 rounded-full border-2 border-border bg-muted animate-pulse"></div>
        </div>
        <p class="text-sm text-muted-foreground italic">更多更新即将到来...</p>
      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-border/40 bg-card/30 backdrop-blur-sm">
    <div class="container mx-auto px-6 py-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex flex-col items-center md:items-start gap-2">
          <div class="flex items-center gap-2">
            <img src="/logo.png" alt="映雪安全" class="h-6 w-6 opacity-70" />
            <span class="text-sm font-medium text-foreground/70">映雪安全</span>
          </div>
          <p class="text-xs text-muted-foreground">
            © 2025 YingxueSec. All rights reserved.
          </p>
        </div>
        
        <div class="flex flex-wrap items-center justify-center gap-4 text-xs">
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-muted/50 border border-border/30">
            <svg class="h-3.5 w-3.5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <span class="text-muted-foreground">访问 <span id="busuanzi_value_site_pv" class="text-foreground/80 font-medium">-</span></span>
          </div>
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-muted/50 border border-border/30">
            <svg class="h-3.5 w-3.5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="text-muted-foreground">访客 <span id="busuanzi_value_site_uv" class="text-foreground/80 font-medium">-</span></span>
          </div>
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-muted/50 border border-border/30">
            <svg class="h-3.5 w-3.5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-muted-foreground">运行 <span id="runtime_days" class="text-foreground/80 font-medium">0</span> 天</span>
          </div>
        </div>
      </div>
    </div>
  </footer>
</Layout>

<!-- 不蒜子统计 -->
<script is:inline async src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>

<script is:inline>
  // 计算运行时间（从 2025-11-20 开始）
  function updateRuntime() {
    const startDate = new Date('2025-11-20T00:00:00');
    const now = new Date();
    const diff = now.getTime() - startDate.getTime();
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const runtimeElement = document.getElementById('runtime_days');
    if (runtimeElement) {
      runtimeElement.textContent = String(days);
    }
  }
  
  updateRuntime();
  // 每天更新一次
  setInterval(updateRuntime, 1000 * 60 * 60 * 24);
</script>
