---
interface Props {
  showStats?: boolean;
  backLink?: { href: string; text: string };
}

const { showStats = true, backLink } = Astro.props;
---

<footer class="border-t border-border/50 bg-background">
  <div class="container mx-auto px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-3">
        <img src="/logo.png" alt="映雪安全" class="h-6 w-6" />
        <span class="text-sm text-muted-foreground">© 2025 YingxueSec. All rights reserved.</span>
      </div>
      
      {backLink ? (
        <a href={backLink.href} class="text-sm text-muted-foreground hover:text-foreground">
          {backLink.text}
        </a>
      ) : showStats ? (
        <div class="flex items-center gap-6 text-sm text-muted-foreground">
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span id="site-runtime"></span>
          </div>
        </div>
      ) : null}
    </div>
  </div>
</footer>

{showStats && !backLink && (
  <script is:inline>
    function updateRuntime() {
      const startDate = new Date('2025-11-20');
      const now = new Date();
      const diff = now - startDate;
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      document.getElementById('site-runtime').textContent = `运行 ${days} 天`;
    }
    updateRuntime();
    setInterval(updateRuntime, 60000);
  </script>
)}
