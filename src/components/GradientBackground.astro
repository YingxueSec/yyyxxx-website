---
interface Props {
  color1?: string;
  color2?: string;
}

const { color1 = 'blue', color2 = 'purple' } = Astro.props;

const colorMap: Record<string, { light: string; dark: string }> = {
  blue: { light: 'bg-blue-400/15', dark: 'bg-blue-600/20' },
  purple: { light: 'bg-purple-400/10', dark: 'bg-purple-600/15' },
  red: { light: 'bg-red-400/15', dark: 'bg-red-600/20' },
  pink: { light: 'bg-pink-400/10', dark: 'bg-pink-600/15' },
  cyan: { light: 'bg-cyan-400/15', dark: 'bg-cyan-600/20' },
  orange: { light: 'bg-orange-400/15', dark: 'bg-orange-600/20' },
};
---

<!-- 精致网格背景 -->
<div class="fixed inset-0 -z-10 grid-bg opacity-40 dark:opacity-30"></div>

<!-- 高端渐变背景 -->
<div class="fixed inset-0 -z-10 overflow-hidden hidden dark:block">
  <div class={`absolute -top-40 -left-40 w-[600px] h-[600px] ${colorMap[color1]?.dark || colorMap.blue.dark} rounded-full blur-[120px]`}></div>
  <div class={`absolute top-1/3 right-0 w-[500px] h-[500px] ${colorMap[color2]?.dark || colorMap.purple.dark} rounded-full blur-[100px]`}></div>
</div>
<div class="fixed inset-0 -z-10 overflow-hidden dark:hidden">
  <div class={`absolute -top-40 -left-40 w-[600px] h-[600px] ${colorMap[color1]?.light || colorMap.blue.light} rounded-full blur-[120px]`}></div>
  <div class={`absolute top-1/3 right-0 w-[500px] h-[500px] ${colorMap[color2]?.light || colorMap.purple.light} rounded-full blur-[100px]`}></div>
</div>
